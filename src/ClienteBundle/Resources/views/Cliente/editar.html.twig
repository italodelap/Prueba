{% extends 'base.html.twig' %}

{% block title %} Editar cliente {% endblock title %}

{% block body %}

    {{ parent() }}

    {{ include('ClienteBundle:Cliente:mensajes/success.html.twig') }}

    <div class="main container">
        <div class="row well">
            <div class="col-md-6">
                <div class="page-header">
                    <h2> Editar cliente </h2>
                </div>
                
                {{ form_start(form, { 'attr': { 'novalidate': 'novalidate', 'role': 'form' } }) }}

                    <h4 class="text-danger">
                        {{ form_errors(form) }}
                    </h4>

                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.nombre) }}
                            {{ form_widget(form.nombre, { 'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ingrese nombre'
                            } }) }}
                            <span class="text-danger">
                                {{ form_errors(form.nombre) }}
                            </span>
                        </div>
    
                        <div class="form-group">
                            {{ form_label(form.apellido) }}
                            {{ form_widget(form.apellido, { 'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ingrese apellido'
                            } }) }}
                            <span class="text-danger">
                                {{ form_errors(form.apellido) }}
                            </span>
                        </div>
    
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, { 'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ingrese mail'
                            } }) }}
                            <span class="text-danger">
                                {{ form_errors(form.email) }}
                            </span>
                        </div>
    
                        <div class="form-group">
                            {{ form_label(form.grupo) }}
                            {{ form_widget(form.grupo, { 'attr': { 'class': 'form-control' } }) }}
                            <span class="text-danger">
                                {{ form_errors(form.grupo) }}
                            </span>
                        </div>
    
                        <div class="form-group">
                            {{ form_label(form.observaciones) }}
                            {{ form_widget(form.observaciones, { 'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ingrese observaciones'
                            } }) }}
                            <span class="text-danger">
                                {{ form_errors(form.observaciones) }}
                            </span>
                        </div>
                    </fieldset>

                    <div class="form-actions">
                        {{ form_widget(form.guardar, {
                            'label': 'Actualizar cliente',
                            'attr': {
                                'class': 'btn btn-success'
                            }
                        }) }}
                    </div>

                {{ form_end(form) }}
                
            </div>
        </div>
    </div>

{% endblock body %}